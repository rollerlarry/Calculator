<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000"

    >
    <TableRow>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_span="4"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:background="#000"
            />

    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@null"
            android:layout_span="3"
            android:padding="@dimen/paddingButtonType1"
            android:background="@color/colorDefaultButtonType2"
            android:layout_margin="@dimen/marginButton"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_button"
            android:padding="@dimen/paddingButtonType1"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />


    </TableRow>


    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-:-"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />

    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type1"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/textSize"
            android:padding="@dimen/paddingButtonType2"
            android:background="@drawable/change_color_background_type2"
            android:layout_margin="@dimen/marginButton"
            android:textColor="@color/textColor"
            />

    </TableRow>


</TableLayout>